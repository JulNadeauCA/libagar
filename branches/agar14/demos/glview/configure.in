# Public domain

REGISTER("--enable-static",	"Produce a static binary [default: no]")

CHECK(cc)
CHECK(pthreads)
CHECK(sdl)
CHECK(opengl, 1.1)
CHECK(freetype)
CHECK(agar, 1.3)
CHECK(math)
CHECK(glu, 1.1)

if [ "${HAVE_AGAR}" != "yes" -o "${HAVE_OPENGL}" != "yes" ]; then
	echo "This demo requires Agar and OpenGL installed on your system."
	exit 1
fi
if [ "${HAVE_GLU}" != "yes" ]; then
	echo "This demo requires the GLU library."
	exit 1
fi

if [ "${enable_static}" = "yes" ]; then
	MDEFINE(LDFLAGS, "-static")
fi
