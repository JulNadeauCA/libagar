		echo "Cannot find source directory: ${srcdir}"
		exit 1
	fi
	if [ ! -e "${srcdir}/configure.in" ]; then
		echo "Invalid source directory: ${srcdir}"
		exit 1
	fi
	SRC=${srcdir}

	perl ${SRC}/mk/mkconcurrent.pl ${SRC}
else
	if [ ! -e "configure.in" ]; then
		echo "Missing --srcdir argument"
