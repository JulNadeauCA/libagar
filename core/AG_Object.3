.\" SYNTAX(c)
AG_Button *btn = AG_ButtonNew(NULL, 0, NULL);

if (AG_OfClass(btn, "AG_Widget:AG_Button")) {
	/*
	 * btn is an instance of AG_Button,
	 * and *not* a subclass thereof.
	 */
}
if (AG_OfClass(btn, "AG_Widget:AG_Button:*")) {
	/*
