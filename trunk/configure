#include <stdio.h>
#include <stdarg.h>

int
testprintf(const char *fmt, ...)
{
	va_list args;
	char *buf;

	va_start(args, fmt);
	if (vasprintf(&buf, "%s", args) == -1) {
		return (-1);
	}
	va_end(args);

	free(buf);
	return (0);
}

int
main(int argc, char *argv[])
{
	return (testprintf("foo %s", "bar"));
}

