cat << EOT > conftest.c

#include <stdio.h>

#include <SDL.h>

int
main(int argc, char *argv[])
{
	SDL_Surface su;
	SDL_TimerID tid;
	SDL_Color color;
	SDL_Event event;
	Uint8 u8;
	Uint16 u16;
	Uint32 u32;
	Sint8 s8;
	Sint16 s16;
	Sint32 s32;

	if (SDL_Init(SDL_INIT_TIMER|SDL_INIT_NOPARACHUTE) != 0) {
		return (1);
	}
	SDL_Quit();
	return (0);
}


EOT
