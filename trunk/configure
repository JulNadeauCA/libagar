echo "#define HAVE_OPENGL" $HAVE_OPENGL >> engine/config/have_opengl.h
echo "#endif /* HAVE_OPENGL */" >> engine/config/have_opengl.h
else
echo "#undef HAVE_OPENGL" > engine/config/have_opengl.h
fi
if [ "${enable_debug}" = "yes" ]
 then
DEBUG=1
echo "#ifndef DEBUG" > engine/config/debug.h
echo "#define DEBUG" $DEBUG >> engine/config/debug.h
echo "#endif /* DEBUG */" >> engine/config/debug.h
LOCKDEBUG=1
echo "#ifndef LOCKDEBUG" > engine/config/lockdebug.h
echo "#define LOCKDEBUG" $LOCKDEBUG >> engine/config/lockdebug.h
echo "#endif /* LOCKDEBUG */" >> engine/config/lockdebug.h
else
echo "#undef DEBUG" > engine/config/debug.h
echo "#undef LOCKDEBUG" > engine/config/lockdebug.h
fi
if [ "${enable_map_editor}" != "no" ]
 then
MAP_EDITOR=1
echo "#ifndef MAP_EDITOR" > engine/config/map_editor.h
echo "#define MAP_EDITOR" $MAP_EDITOR >> engine/config/map_editor.h
echo "#endif /* MAP_EDITOR */" >> engine/config/map_editor.h
else
echo "#undef MAP_EDITOR" > engine/config/map_editor.h
fi
if [ "${enable_serialization}" != "no" ]
 then
SERIALIZATION=1
echo "#ifndef SERIALIZATION" > engine/config/serialization.h
echo "#define SERIALIZATION" $SERIALIZATION >> engine/config/serialization.h
echo "#endif /* SERIALIZATION */" >> engine/config/serialization.h
else
echo "#undef SERIALIZATION" > engine/config/serialization.h
fi
if [ "${enable_8bpp}" != "no" ]
 then
VIEW_8BPP=1
echo "#ifndef VIEW_8BPP" > engine/config/view_8bpp.h
echo "#define VIEW_8BPP" $VIEW_8BPP >> engine/config/view_8bpp.h
echo "#endif /* VIEW_8BPP */" >> engine/config/view_8bpp.h
else
echo "#undef VIEW_8BPP" > engine/config/view_8bpp.h
fi
if [ "${enable_16bpp}" != "no" ]
 then
