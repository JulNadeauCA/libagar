echo "#endif" >> config/have_getuid.h

	HAVE_GETUID="yes"
	echo "yes"
else
    echo "#undef HAVE_GETUID" > config/have_getuid.h

	HAVE_GETUID="no"
	echo "no"
fi
echo -n "checking for a getenv() function..."
