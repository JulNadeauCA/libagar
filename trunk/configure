	echo "#ifndef HAVE_FREETYPE" > engine/config/have_freetype.h
echo "#define HAVE_FREETYPE" $HAVE_FREETYPE >> engine/config/have_freetype.h
echo "#endif /* HAVE_FREETYPE */" >> engine/config/have_freetype.h

	HAVE_FREETYPE=yes

	echo "yes"
else
	echo "#undef HAVE_FREETYPE" > engine/config/have_freetype.h

	echo "no"
fi
if [ "${HAVE_FREETYPE}" = "yes" ]; then
NONE=1
else
echo "The FreeType test would not compile."
exit 1
fi
if [ "${with_x11}" != "no" ]
 then
echo -n "checking for X11 (http://www.xfree86.org/)..."
echo -n "checking for X11 (http://www.xfree86.org/)..." >> config.log
echo "checking for X11 (http://www.xfree86.org/)..." >> config.log
if [ -d /usr/X11R6 ]; then
X11BASE=/usr/X11R6
X11_CFLAGS=-I/usr/X11R6/include
X11_LIBS="-L/usr/X11R6/lib -lX11"
else
NONE=1
fi
if [ -d /usr/X386 ]; then
X11BASE=/usr/X386
X11_CFLAGS=-I/usr/X386/include
X11_LIBS="-L/usr/X386/lib -lX11"
else
NONE=1
fi
if [ -d /usr/bin/X11 ]; then
X11BASE=/usr/bin/X11
X11_CFLAGS=-I/usr/bin/X11/include
X11_LIBS="-L/usr/bin/X11/lib -lX11"
else
NONE=1
fi
if [ "${X11BASE}" != "" ]; then
echo -n "ok"
echo -n "ok" >> config.log
echo ", $X11BASE"
echo ", $X11BASE" >> config.log
x11_found=yes
echo X11BASE=$X11BASE >> Makefile.config
echo X11_CFLAGS=$X11_CFLAGS >> Makefile.config
echo X11_LIBS=$X11_LIBS >> Makefile.config
else
echo "missing"
exit 1
fi
	if [ "${x11_found}" = "yes" ]
 then
USE_X11=1
echo "#ifndef USE_X11" > engine/config/use_x11.h
echo "#define USE_X11" $USE_X11 >> engine/config/use_x11.h
echo "#endif /* USE_X11 */" >> engine/config/use_x11.h
	else
echo "#undef USE_X11" > engine/config/use_x11.h
	fi
fi
if [ "${enable_xdebug}" = "yes" -a "${x11_found}" = "yes" ]
 then
XDEBUG=1
echo "#ifndef XDEBUG" > engine/config/xdebug.h
echo "#define XDEBUG" $XDEBUG >> engine/config/xdebug.h
echo "#endif /* XDEBUG */" >> engine/config/xdebug.h
else
echo "#undef XDEBUG" > engine/config/xdebug.h
fi
if [ "${with_gl}" = "yes" ]
 then
HAVE_OPENGL=1
