main(int argc, char *argv[])
{
	(void)getenv("PATH");
	return (0);
}

EOT
compile="ok"
echo "$CC $CFLAGS $TEST_CFLAGS -o conftest conftest.c" >>config.log
$CC $CFLAGS $TEST_CFLAGS -o conftest conftest.c 2>>config.log
