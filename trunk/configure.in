#	$Csoft: configure.in,v 1.6 2002/02/19 22:09:41 vedge Exp $

makeout(Makefile.config);
inclout(engine/config.h);

register("--with-smpeg",	"Play videos through the smpeg library [yes]");
register("--without-smpeg",	"");

if ("$1" = "--help") {
	help();
	exit(1);
}

if ("$1" = "--version") {
	version();
	exit(1);
}

check(64bit);
require(SDL, 1.2.0);

if ("$WITHOUT_SMPEG" = "") {
	require(x11, /usr/X11R6, /usr/X386);
	check(smpeg, 0.4.3);
}

