#	$Csoft: configure.in,v 1.1 2002/01/26 20:08:11 vedge Exp $

makeout(Makefile.config);
inclout(config.h);

register("--with-smpeg",	"Play videos through the smpeg library [yes]");
register("--without-smpeg",	"");

if ("$1" == "--help") {
	help();
	exit(1);
}

if ("$1" == "--version") {
	version();
	exit(1);
}

require(SDL, 1.2.0);
require(glib, 1.2.0);

if ("$WITHOUT_SMPEG" = "") {
	require(x11, /usr/X11R6, /usr/X386);
	require(smpeg, 0.4.3);
}

