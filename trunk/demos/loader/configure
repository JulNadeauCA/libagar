else
echo "no"
echo "no" >> config.log
echo "#undef HAVE_AGAR" > config/have_agar.h
echo "#undef AGAR_CFLAGS" > config/agar_cflags.h
echo "#undef AGAR_LIBS" > config/agar_libs.h
