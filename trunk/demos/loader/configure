#include <agar/core.h>

int
main(int argc, char *argv[])
{
	AG_InitCore("conf-test", 0);
	AG_InitVideo(320, 240, 32, 0);
	AG_EventLoop();
	AG_Quit();
	return (0);
}

EOT
compile="ok"
$CC $CFLAGS $TEST_CFLAGS ${AGAR_CFLAGS} -o conftest conftest.c ${AGAR_LIBS} 2>>config.log
if [ $? != 0 ]; then
	echo "failed ($?)" >> config.log
	compile="failed"
fi
rm -f conftest conftest.c
