.Fn prop_set_uint16 "void *obj" "char *key" "Uint16 value"
.Pp
.Ft "struct prop *"
.Fn prop_set_sint16 "void *obj" "char *key" "Sint16 value"
.Pp
.Ft "struct prop *"
.Fn prop_set_uint32 "void *obj" "char *key" "Uint32 value"
.Pp
.Ft "struct prop *"
